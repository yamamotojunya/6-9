

    <div class="col-xs-3">

      <%= render 'users/list', user: @user %>

      <%= render 'books/list', book: @book %>

    </div>

    <div class="col-xs-9">

    <h2>Users</h2>

    <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @users.present? %>
    <% @users.each do |f| %>
      <tr>
        <td>
          <%= attachment_image_tag f, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
        </td>
        <td><%= f.name %></td>
        <td><%= link_to 'Show', user_path(f.id) %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

  </div>