<% paginate @books, class: "paginate" %>

	  <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3 style="color: red"><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li style="color: red"><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>



<p id="notice" style="color: green;">
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
  </p>

<div class="col-xs-3">

	<%= render 'users/list', user: @user %>

    <%= render 'books/list', book: @book %>

</div>

<div class="col-xs-9">
	<h2>Books</h2>

	    <table class="table table-hover table-inverse">
		  <thead>
		    <tr>
		      <th></th>
		      <th>Title</th>
		      <th>Opinion</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		  	<% @books.each do |f| %>
		      <tr>
		        <td>
		        	<%= attachment_image_tag f.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
		        </td>
		        <td>
		        	<%= link_to f.title, book_path(f.id) %>
		        </td>
		        <td>
		        	<%= f.body %>
		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
</div>