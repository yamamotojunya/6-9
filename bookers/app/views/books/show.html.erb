
  <p id="notice" style="color: green;">
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
  </p>

  <div class="col-xs-3">

    <%= render 'users/list', user: @user %>

    <%= render 'books/list', book: @book_form %>

  </div>

    <div class="col-xs-9">
    		<h2>Book detail</h2>
    		<table class="table">
    		  <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>

              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit" , edit_book_path(@book.id), class:"btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>