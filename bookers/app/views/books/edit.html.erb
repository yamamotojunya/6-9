<div class="col-md-6 col-md-offset-3">

    <h1>Editing Book</h1>

    <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3 style="color: red"><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li style="color: red"><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


    <%= form_for(@book) do |f| %>
        <div class="field row">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class:"col-xs-12" %>
        </div>
        <div class="field row">
            <label for="book_body">Option</label>
            <%= f.text_area :body, class:"col-xs-12" %>
        </div>

        <div class="action row" id="Update">
            <%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %>
        </div>
    <% end %>

    <%=link_to 'Show', book_path(@book.id),class:"show_#{@book.id}" %><span class="esikiri">|</span><%=link_to 'Back', "/books/",class:"back" %>
</div>


