<h2>New book</h2>

<%= form_for(@book) do |f| %>

      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

    <h4>Title</h4>
    <div>
    	<%= f.text_field :title,class:"book_title" %>
    </div>

    <h4>Body</h4>
    <div>
    	<%= f.text_area :body,class:"book_body" %>
    </div>

    <div>
    	<%= f.submit 'Create Book' %>
    </div>

<% end %>